// This is your Prisma schema file,
// learn more about it in the docs: https://pris.lyd/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NEW: Role enum to distinguish between user types
enum Role {
  FARMER
  ADMIN
}

model User {
  id                  String    @id @default(uuid())
  phoneNumber         String    @unique
  name                String?
  languagePreference  String    @default("hi")
  hashedRefreshToken  String?
  role                Role      @default(FARMER) // NEW: role field for users

  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  // NEW: Relation defining that a user can have many farms
  farms               Farm[]

  @@map("users")
}

// NEW: Model for a user's farm
model Farm {
  id                String   @id @default(uuid())
  farmName          String
  locationLat       Float
  locationLon       Float
  soilType          String   // e.g., 'sandy', 'clayey', 'loamy'
  irrigationSource  String   // e.g., 'rain-fed', 'canal', 'borewell'

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relation to the User model
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId            String

  // Relation to CropCycle model
  cropCycles        CropCycle[]

  @@map("farms")
}

// NEW: Model for a crop cycle (e.g., "Tomatoes - Summer 2025")
model CropCycle {
  id                  String   @id @default(uuid())
  cropName            String
  sowingDate          DateTime
  expectedHarvestDate DateTime?
  status              String   @default("ACTIVE") // e.g., ACTIVE, COMPLETED, FAILED

  farm                Farm     @relation(fields: [farmId], references: [id], onDelete: Cascade)
  farmId              String

  // NEW: A crop cycle can have many activities
  activities          Activity[]

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  @@map("crop_cycles")
}

// NEW: Model for a single logged activity
model Activity {
  id            String   @id @default(uuid())
  activityType  String   // e.g., 'IRRIGATION', 'FERTILIZER', 'PEST_CONTROL'
  date          DateTime
  notes         String?
  data          Json?    // For specific data, e.g., {"fertilizerName": "Urea"}

  cropCycle     CropCycle @relation(fields: [cropCycleId], references: [id], onDelete: Cascade)
  cropCycleId   String

  createdAt     DateTime  @default(now())
  @@map("activities")
}

// NEW: Model for manageable content like schemes or advisories
model Content {
  id          String   @id @default(uuid())
  title       String
  description String
  type        String   // e.g., 'SCHEME', 'ADVISORY'
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  @@map("content")
}